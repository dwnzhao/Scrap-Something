<% content_for :header do %>
<%= render "common/home_header" %>
<%end%>

<h1>Add Your Product Listing</h1>
<hr><br/>

<div id = "product_new">

<%= form_for(:product_listing, :url => {:action => 'save_listing', :scrap_id => @scrap_id}) do |f| %>

	<%= render(:partial => "listing_form", :locals => {:f => f})%>

	<div class="form-buttons"><%= submit_tag("List")%></div>

<% end %>

</div>
