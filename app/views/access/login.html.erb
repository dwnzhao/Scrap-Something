<% @page_title = "Log In"%>

<div class="hero-unit page-shadow">

<p class="title">Log In </p> <hr>
<div style="text-align: left; margin-left: 250px">
<%= form_tag({:action => "authenticate"}, :class => 'form-horizontal') do %>
<div class="control-group">
	<%= label_tag 'inputEmail:', 'Email:', :class=> 'control-label'%>
	<div class="controls">
		<%= text_field_tag(:email, params[:username], :id => 'inputEmail')%>
	</div>
</div>
<div class="control-group">
	<%= label_tag 'inputPassword:', 'Password:', :class=> 'control-label'%>
	<div class="controls">
		<%= password_field_tag(:password, params[:password], :id => 'inputPassword')%>
	</div>
</div>
</div>

<br>
<%= submit_tag "log in", :class=>'button'%>
<%end%>	<br><br><br>	

<div id ="navigation_link">Need a new account? <span style="text-decoration:underline;"> <%= link_to('sign up', {:action => 'signup'})%></span> </div>


</div>

