<%= error_messages_for(@user)%>

<div style="text-align: left; margin-left: 250px">
	<div class="control-group">
		<%= f.label(:avatar, "Upload a profile pic", :class=> 'control-label')%>	
		<div class="controls">
			<%= f.file_field(:avatar, {:style => "left: 50px"}) %>
		</div>
	</div>

	<div class="control-group">
		<%= f.label(:first_name, "First Name*", :class=> 'control-label')%>
		<div class="controls">
			<%= f.text_field(:first_name) %>
		</div>
	</div>

	<div class="control-group">
		<%= f.label(:last_name, "Last Name*", :class=> 'control-label')%>
		<div class="controls">
			<%= f.text_field(:last_name)%>
		</div>
	</div>

	<div class="control-group">
		<%= f.label(:email, "Email*", :class=> 'control-label')%>
		<div class="controls">
			<%= f.text_field(:email)%>
		</div>
	</div>

	<% if(password_display)%>
	<div class="control-group">
		<%= f.label(:password, "Password*", :class=> 'control-label')%>
		<div class="controls">
			<%= f.password_field(:password)%>
		</div>
	</div>
	<div class="control-group">
		<%= f.label(:password_confirmation, "Retype Password*", :class=> 'control-label')%>
		<div class="controls">
			<%= f.password_field(:password_confirmation)%>
		</div>
	</div>				
	<%end%>

	<div class="control-group">
		<%= f.label(:metro_area, "Your City", :class=> 'control-label')%>
		<div class="controls">
			<%= f.select(:metro_area, options_for_select(@cities))%>
		</div>
	</div>	
	<div class="control-group">			
		<%= f.label(:zipcode, "Your Zipcode", :class=> 'control-label')%>
		<div class="controls">
			<%= f.text_field(:zipcode)%>
		</div>
	</div>	
	<div class="control-group">			
		<%= f.label(:user_level, "Are you a vendor?", :class=> 'control-label')%>
		<div class="controls">
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			<%= f.radio_button(:user_level, 3, :id => 'vendor_yes') %>Yes
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			<%= f.radio_button(:user_level, 1, :id => 'vendor_no') %>No
		</div>
	</div>				
</div>
<br/><br/>