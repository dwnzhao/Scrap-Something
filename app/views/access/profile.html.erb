<% @page_title ="Profile"%>

<h1>Your Profile </h1>

<% if @user.avatar_file_name%> 
	<%= image_tag @user.avatar.url(:thumb) %>
<%end%>

<table class="profile">
<tr>
	<td> <%= @user.fullname%></td>
</tr>
<tr>
	<td> <%= mail_to(@user.email) %></td>
</tr>
</table>

<br/><hr><br/>
<table summary = "edit profile">
	<tr>
		<th> <%= link_to('Change Profile Picture', {:action => 'upload_profile_pic'})%></th>
		<th> <%= link_to('Edit Profile', {:action => :edit}) %></th>
		<th> <%= link_to('Log Out', {:action => 'logout'})%></th>
	</tr>
</table>

<br/><br/>

