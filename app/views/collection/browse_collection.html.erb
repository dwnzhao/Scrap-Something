<div id = "category_table">
<table>
	<tr><div class ='inline'> BROWSE &nbsp; </div></tr>
	<% @categories.each do |cat| %>
	<tr><%= link_to(cat.name, {:action => 'filter', :id => cat.id})%>&nbsp;</tr>
	<%end%>	

	<tr><div class ='inline'> OR &nbsp; </div></tr>
	
	<tr>
	<%= form_tag(:action => 'search') do%>
		<%= text_field_tag(:search, "", :size => 25, :maxlength => 40) %>
		<%= submit_tag ("search")%>
	<%end%></tr>
	
	<hr>
</table> </div>


<%= render(:partial => "collection_view", :locals => {:detail => 'browse_collection_detail', :images => @collection})%>


