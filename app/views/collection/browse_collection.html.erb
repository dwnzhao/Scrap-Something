<%if(session[:user_id].blank?)%>

<div class="hero-unit" style="margin-top:-30px">
  <h1>Hi there, this is a really cool site.</h1>
  <p>You can blah blah blah...</p>
  <p>
    <a class="btn btn-primary btn-large" href="/access/signup">
    Sign Up
	</a>
  </p>
</div>
<%end%>

<p class="lead">I want to find...</p>

<div id = "category_table", class = 'table'>
	<div class = 'row'> 
		<% @categories.each do |cat| %>
		<%= link_to(cat.name, {:action => 'filter', :id => cat.id})%>&nbsp;
		<%end%>	
		<%= link_to('...', {:action => 'filter', :id => 'other'})%>
	</div>
	<br/>
	<div class = 'row'>
		<%= form_tag :action => 'search', :user_specific => false do%>
		<%= text_field_tag(:search_explore, "", :size => 25, :maxlength => 40, :class => 'search') %>
		<button type="submit" class = 'button'><i class="icon-search"></i></button>
		<%end%>
	</div>

</div>

<hr>
<div id = "browse_image_area" style="padding: 0px 50px; min-width: 1400px">

<%= render(:partial => "collection_view", :locals => {:images => @collection, :link_description => "bookmark", :method => "bookmark", :images_per_row => 5})%>

</div>
