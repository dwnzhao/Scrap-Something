<% content_for :header do %>
<%= render "common/browse_header" %>
<%end%>

<div id = "category_table">
<table>
	<tr>
	<% @categories.each do |cat| %>
	<tr><%= link_to(cat.name, {:action => 'filter', :id => cat.id})%>&nbsp;</tr>
	<%end%>	
	
	<tr>
	<%= form_tag(:action => 'search') do%>
		<%= text_field_tag(:search, "", :size => 25, :maxlength => 40) %>
		<%= submit_tag ("search")%>
	<%end%>
	</tr>
	
	<hr>
</table> </div>


<%= render(:partial => "collection_view", :locals => {:images => @collection, :link_description => "bookmark", :method => "bookmark", :controller => "share"})%>


