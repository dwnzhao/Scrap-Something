<%if(session[:user_id].blank?)%>

<div class="hero-unit" style="background-color:#FFffff">
	<h1>The ultimate wedding planner.</h1>
	<div id="myCarousel" class="carousel slide">
		<!-- Carousel items -->
		<h3>
			<div class="carousel-inner">
				<div class="active item">Browse thousands of pictures from real vendors</div>
				<div class="item">Add pictures from desktop, phone, and other sites</div>
				<div class="item">Organize your wedding</div>
			</div>
		</h3>
	</div>
	<br>
	<p>
		<a class="btn btn-primary btn-large" href="/access/signup">
			Sign Up
		</a>
		<a class="btn btn-link btn-large" href="/access/login">
			Log In
		</a>
	</p> <br>
</div> <hr>
<%end%>


<div class="row">
	<div class = 'span8 offset1' style="border-right: dashed thin grey"> 
		<p class="lead" style="margin-top: 30px; margin-bottom:10px"> by category...</p>
		<% @categories.each do |cat| %>
		<%= link_to(cat.name, {:action => 'category_filter', :id => cat.id}, {:remote => true})%>&nbsp;
		<%end%>	<br><br>

		<%= form_tag({:action => 'search', :user_specific => false,}, {:remote => true})   do%>
		<%= text_field_tag(:search_explore, "", :size => 25, :maxlength => 40, :class => 'search', :autocomplete => "off") %>
		<button type="submit" class = 'button'><i class="icon-search"></i></button>

		<%end%>

	</div>

	<div class = 'span8' >
		<p class="lead" style="margin-top: 30px">by local vendors...</p>
		<select class="span2">
			<option>location</option>
			<% @cities.each do |city| %>
			<option><%= city.city%></option>
			<%end%>
		</select>

		<select class="span2">
			<option>type</option>
			<option>catering</option>
			<option>dress & tux</option>
			<option>photographer</option>
			<option>venue</option>
		</select> <br><br><br>

	</div>

</div>

<hr>
<div id = "browse_image_area" style="padding: 0px 20px; min-width: 1400px;">

<%= render(:partial => "collection_view", :locals => {:images => @collection, :link_description => "bookmark", :method => "bookmark", :images_per_row => 5})%>

</div>
