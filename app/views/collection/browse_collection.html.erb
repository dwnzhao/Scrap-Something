<% content_for :header do %>
<%= render "common/browse_header" %>
<%end%>

<div id = "category_table", class = 'table'>
	<div class = 'row'> 
		<% @categories.each do |cat| %>
		<%= link_to(cat.name, {:action => 'filter', :id => cat.id})%>&nbsp;
		<%end%>	
	</div>
	<br/>
	<div class = 'row'>
		<%= form_tag(:action => 'search') do%>
		<%= text_field_tag(:search_explore, "", :size => 25, :maxlength => 40, :class => 'search') %>
		<%= submit_tag ("search")%>
		<%end%>
	</div>

</div>

<div class="separator"></div>


<%= render(:partial => "collection_view", :locals => {:images => @collection, :link_description => "bookmark", :method => "bookmark", :controller => "share"})%>


