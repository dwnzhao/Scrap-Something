<div id="avatar" style="padding-top:50px;">		
	<% if user.avatar_file_name%>
	<%= link_to image_tag(user.avatar.url(:thumb), :size =>'50x50', :class => "img-rounded"), {:action => 'profile', :controller => 'access'}%>
	<%else%>
	<%= link_to(user.email, {:action => 'profile', :controller => 'access'})%>
	<%end%>
</div>
<br/>

<%= form_tag({:action => 'search', :user_specific => true}, {:remote => true}) do%>


<%= text_field_tag(:search_home, "", :class => 'search', :field => 'search my stuff...', :autocomplete => "off" ) %>
<button type="submit" class = 'button'><i class="icon-search"></i></button>
<%end%>

<hr>

<%if !categories.blank?%>
<div id="category_table">
	<h4>
		categories
	</h4>

	<% categories.each_with_index do |category, index|%>
	<%= link_to(category.name, {:action => "category_filter", :category_id => category.id, :controller => "collection", :user_specific => true}, :remote => true) %>

	<% if (index+1)%3==0 %>
	<br>
	<%end%>		
	<%end%>
</div>

<hr>
<%end%>

