<div id="avatar" style="padding-top:50px;">		
	<% if user.avatar_file_name%>
	<%= link_to image_tag(user.avatar.url(:thumb), :size =>'50x50', :class => "img-rounded"), {:action => 'profile', :controller => 'access'}%>
	<%end%> <br>
	<span>Hi, <%=user.first_name%> </span>
</div>
<br/>

<%= form_tag({:action => 'search', :user_specific => true}, {:remote => true}) do%>


<%= text_field_tag(:search_home, "", :class => 'search', :field => 'search my stuff...', :autocomplete => "off" ) %>
<button type="submit" class = 'button'><i class="icon-search"></i></button>
<%end%>

<hr>

<%if !categories.blank?%>
<div id="category_table">
	<h4>
		categories
	</h4>

	<% categories.each_with_index do |category, index|%>
	<%= link_to(category.name, {:action => "category_filter", :category_id => category.id, :controller => "collection", :user_specific => true}, :remote => true) %>

	<% if (index+1)%3==0 %>
	<br>
	<%end%>		
	<%end%>
</div>

<hr>
<%end%>

<%= link_to(raw('<h4><i class="icon-star"></i> my favorites</h4>'), {:action => "category_filter", :controller => "collection", :favorite => true}, :remote => true) %>

<hr>

<div id="vision_boards">
	<h4>my pages</h4>
	<% @vb.each_with_index do |vb, index|%>
	<p><%= vb.name%>
	<%= link_to(image_tag(vb.photo.url, :size => "100x100"), vb.photo.url, {:class => "fancybox"})%>
	<%= link_to(raw('<i class="icon-trash"></i>'), {:action => 'delete', :controller => 'visualize', :vb_id => vb.id})%>
	
	</p>
	<% if (index+1)%3==0 %>
	<br>
	<%end%>		
	<%end%>
	<strong></strong>
</div>
