<div id="detailed_view_scrap_name"> <%=@scrap.name%></div>
<hr>

<br/>

<table class="collection_details">
	<tr>
		<th>
			<%= link_to('x', {:action => 'remove_bookmark', :controller => 'share', :id => @scrap.id})%>
		</th>
		<th><%= image_tag @scrap.photo.url, :size => '80%x80%'%></th>
		<th>
			<div id="scrap_categories"><%= @categories.map { |i| i.to_s }.join(", ") %></div>
			<div id="scrap_details"><%= simple_format(word_wrap(@scrap.description, 50))%></div>
			</th>
	</tr>
</table>