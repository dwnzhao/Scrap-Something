<% @page_title ="Vendor Profile"%>

<h1>Your Company Profile </h1>

<table class="profile">
	<tr>
		<td> <%= image_tag @vendor.avatar.url(:thumb)%></td>
	</tr>
	<tr>
		<td> <%= @vendor.company%></td>
	</tr>
	<tr>
		<td> <%= link_to(@vendor.website, url_with_protocol(@vendor.website), :target => '_blank') %></td>
	</tr>
	<tr>
		<td> <%= @vendor.company_address%></td>
	</tr>
</table>

<br/><hr><br/>
<table summary = "edit profile">
	<tr>
		<th> <%= link_to 'Change Profile Picture', :action => 'upload_profile_pic', :controller => "access"%></th>
