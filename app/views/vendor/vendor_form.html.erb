<%= error_messages_for(@vendor)%>

<%= form_for(:vendor, :url => {:action => 'create_vendor'}, :html => {:class => "form-horizontal"}) do |f| %>

<div style="text-align: left; margin-left: 450px">
	<div class="control-group">
		<%= f.label(:avatar, "Upload a company pic", :class=> 'control-label')%>	
		<div class="controls">
			<%= f.file_field :avatar %>
		</div>
	</div>

	<div class="control-group">
		<%= f.label(:company, "Company name", :class=> 'control-label')%>
		<div class="controls">
			<%= f.text_field(:company, :size => 30, :maxlength => 40)%>
		</div>
	</div>

	<div class="control-group">
		<%= f.label(:website, "Company Website", :class=> 'control-label')%>
		<div class="controls">
			<%= f.text_field(:website, :size => 30, :maxlength => 40)%>
		</div>
	</div>

	<div class="control-group">
		<%= f.label(:company_address, "Company Address", :class=> 'control-label')%>
		<div class="controls">
			<%= f.text_field(:company_address, :size => 30, :maxlength => 40)%>
		</div>
	</div>

	<div class="control-group">
		<%= f.label(:metro_area, "City", :class=> 'control-label')%>
		<div class="controls">
			<%= f.select(:metro_area, options_for_select(@cities))%>
		</div>
	</div>

	<div class="control-group">
		<%= f.label(:zipcode, "Zipcode", :class=> 'control-label')%>
		<div class="controls">
			<%= f.text_field(:zipcode)%>
		</div>
	</div>

	<div class="control-group">
		<%= f.label(:phone, "Contact phone number", :class=> 'control-label')%>
		<div class="controls">
			<%= f.text_field(:phone, :size => 30, :maxlength => 40)%>
		</div>
	</div>

	<div class="control-group">
		<%= f.label(:business_type, "Business Type", :class=> 'control-label')%>
		<div class="controls">
			<%= f.select(:business_type, ['catering', 'dress & tux', 'photographer', 'venue'])%>
		</div>
	</div>

	<div class="control-group">
		<%= f.label(:price, "Price", :class=> 'control-label')%>
		<div class="controls">
			<%= f.select(:price, [['$', 1], ['$$', 2], ['$$$', 3], ['$$$$', 4], ['$$$$$', 5]] )%>
		</div>
	</div>

	<div style="margin-left: 25%"><%= submit_tag "Save", :class =>'button' %></div>

</div>


<%end%>